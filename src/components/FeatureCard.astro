---
interface Props {
  image: string;
  title: string;
  description: string;
}

const { image, title, description } = Astro.props;
---

<div class="feature-card flex-shrink-0 w-full sm:w-auto">
  <div class="rounded-3xl p-6 lg:p-8 h-full flex flex-col" style="background-color: #f2f8ff;">
    <!-- Image -->
    <div class="rounded-2xl overflow-hidden mb-6">
      <img
        src={image}
        alt={title}
        class="w-full h-auto"
      />
    </div>

    <!-- Content -->
    <div class="flex-1 flex flex-col">
      <h3 class="text-2xl lg:text-3xl font-bold text-gray-900 mb-4">
        {title}
      </h3>
      <p class="text-base lg:text-lg text-gray-700 leading-relaxed">
        {description}
      </p>
    </div>
  </div>
</div>
