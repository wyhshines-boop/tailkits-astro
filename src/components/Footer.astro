---
// Footer component
import { getLangFromUrl, useTranslations, getLocalizedPath } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<footer class="bg-white py-8 lg:py-12">
	<div class="max-w-7xl mx-auto px-4 xl:px-0">
	  <div class="flex flex-col gap-3 lg:flex-row lg:items-center lg:gap-4 justify-center text-center">
		<div class="text-sm font-medium text-neutral-700">
		  <time>2025</time>
		  - yahao translat. All rights reserved.
		</div>
		<div class="flex flex-wrap items-center justify-center gap-3 text-sm font-medium text-neutral-500">
		  <a href={getLocalizedPath('/privacy', lang)} title={t('footer.privacy')} class="hover:text-neutral-700 transition-colors">
			{t('footer.privacy')}
		  </a>
		  <span class="text-neutral-300">•</span>
		  <a href={getLocalizedPath('/terms', lang)} title={t('footer.terms')} class="hover:text-neutral-700 transition-colors">
			{t('footer.terms')}
		  </a>
		  <span class="text-neutral-300">•</span>
		  <a href={getLocalizedPath('/refund', lang)} title={t('footer.refund')} class="hover:text-neutral-700 transition-colors">
			{t('footer.refund')}
		  </a>
		</div>
	  </div>
	</div>
  </footer>
  
