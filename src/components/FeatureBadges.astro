---
interface Badge {
  text: string;
  icon?: boolean;
}

interface Props {
  title: string;
  description: string;
  badges: Badge[];
}

const { title, description, badges } = Astro.props;
---

<section class="bg-white py-12 lg:py-16">
  <div class="max-w-7xl mx-auto px-4 xl:px-0">
    <!-- Title and Description -->
    <div class="text-center mb-12 lg:mb-16">
      <h2 class="text-3xl lg:text-5xl font-bold text-gray-900 mb-6">
        {title}
      </h2>
      <p class="text-base lg:text-lg text-gray-700 max-w-4xl mx-auto leading-relaxed">
        {description}
      </p>
    </div>

    <!-- Badges Grid -->
    <div class="flex flex-col sm:flex-row sm:flex-wrap items-stretch sm:items-center justify-center gap-3 lg:gap-4">
      {badges.map((badge) => (
        <div class="flex items-start sm:items-center gap-2 lg:gap-3 px-4 lg:px-6 py-3 lg:py-4 rounded-2xl lg:rounded-full bg-blue-100 text-blue-600 w-full sm:w-auto">
          {badge.icon !== false && (
            <svg class="w-5 h-5 lg:w-6 lg:h-6 flex-shrink-0 mt-0.5 sm:mt-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7" />
            </svg>
          )}
          <span class="text-sm sm:text-base lg:text-lg font-medium leading-relaxed">
            {badge.text}
          </span>
        </div>
      ))}
    </div>
  </div>
</section>
