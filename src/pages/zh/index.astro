---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Hero from '../../components/Hero.astro';
import LogoCloud from '../../components/LogoCloud.astro';
import VideoPlayer from '../../components/VideoPlayer.astro';
import Feature from '../../components/Feature.astro';
import FeatureCards from '../../components/FeatureCards.astro';
import Stats from '../../components/Stats.astro';
import Testimonials from '../../components/Testimonials.astro';
import Footer from '../../components/Footer.astro';
import Cta from '../../components/Cta.astro';
import Pricing from '../../components/Pricing.astro';

const featureCardsData = [
	{
		image: '/images/feature1.png',
		title: '一键 vs 五步操作',
		description: '在几秒钟内翻译整个字段，无需复制、粘贴、切换应用再粘贴。每天为每个店铺节省 5 倍时间。'
	},
	{
		image: '/images/feature2.png',
		title: '专业译者级别的翻译',
		description: '先进的 AI 提供专业级准确度，媲美经验丰富的译者——但瞬间完成，成本只是其一小部分。'
	},
	{
		image: '/images/feature3.png',
		title: '更快走向全球',
		description: '为您的店铺做好未来准备。支持 60 多种语言意味着您随时准备好在机会来临时扩展。'
	}
];
---

<BaseLayout>
	<Hero />
	<LogoCloud />
	<VideoPlayer
		badge=""
		title="一键翻译整个页面"
		description="自动翻译按钮智能检测页面上的所有文本项并一次性翻译所有内容。"
		videoUrl="/videos/video-auto.mov"
	/>
	<Stats />
	<FeatureCards
		cards={featureCardsData}
	/>
	<Feature />
	<Cta />
	<Testimonials />
	<Pricing />
	<Footer />
</BaseLayout>
