---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import LogoCloud from '../components/LogoCloud.astro';
import Feature from '../components/Feature.astro';
import Stats from '../components/Stats.astro';
import HowItWorks from '../components/HowItWorks.astro';
import Testimonials from '../components/Testimonials.astro';
import Footer from '../components/Footer.astro';
import Cta from '../components/Cta.astro';
import Pricing from '../components/Pricing.astro';
---

<BaseLayout>
	<Hero />
	<LogoCloud />
	<Feature />
	<Stats />
	<Cta />
	<HowItWorks />
	<Testimonials />
	<Pricing />
	<Footer />
<!-- Dev note: Branded TailKits UI badge; remove for production. -->
<a
  href="https://tailkits.com/ui/"
  target="_blank"
  rel="noopener noreferrer nofollow"
  aria-label="Made with Tailkits UI"
  class="fixed group bottom-6 right-9 z-10 border border-neutral-200 hover:border-neutral-300 leading-none bg-gradient-to-b to-[#F6FFE7] from-[#E9FFFE] shadow-[0_2px_10px_0px_rgba(0,0,0,0.05)] text-neutral-500 hover:text-neutral-600 transition text-sm p-1 font-medium rounded-full"
>
  <div class="py-1.5 px-1.5 rounded-full flex items-center justify-center transition group-hover:bg-neutral-50/50">
    <!-- Sparkles icon (inline SVG replacement) -->
    <svg
      class="h-4 w-4 mr-1.5"
      viewBox="0 0 24 24"
      fill="currentColor"
      aria-hidden="true"
    >
      <path d="M11 2l1.8 4.7L17.5 8 12.8 9.8 11 14.5 9.2 9.8 4.5 8l4.7-1.3L11 2zm8 9l1.2 3.1L23 15l-2.8.9L19 19l-.9-3.1L15 15l3.1-.9L19 11zm-14 4l.9 2.3L9 18l-2.1.7L6 21l-.7-2.3L3 18l2.3-.7L5 15z"/>
    </svg>
    <span>Made with Tailkits UI</span>
  </div>
</a>

</BaseLayout>
