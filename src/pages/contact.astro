---
import BaseLayout from '../layouts/BaseLayout.astro';
import Footer from '../components/Footer.astro';
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<BaseLayout>
  <div class="bg-white min-h-screen">
    <!-- Hero Section -->
    <section class="bg-gradient-to-b from-slate-50 to-white pt-24 lg:pt-32 pb-12 lg:pb-16">
      <div class="max-w-7xl mx-auto px-4 xl:px-0">
        <div class="max-w-3xl mx-auto text-center">
          <div
            class="items-center justify-center rounded-full text-sm font-medium whitespace-nowrap shadow-[0_2px_10px_0px_rgba(0,0,0,0.15)] inline-flex bg-slate-900 text-white px-2.5 py-1"
          >
            Contact Us
          </div>
          <h1
            class="mt-6 bg-gradient-to-b from-slate-800 to-slate-600 bg-clip-text text-4xl font-semibold text-transparent lg:text-5xl lg:leading-tight"
          >
            Get in Touch
          </h1>
          <p class="mt-6 text-lg text-slate-600 leading-relaxed">
            Have questions about yahao translate? We're here to help. Reach out to us and we'll get back to you as soon as possible.
          </p>
        </div>
      </div>
    </section>

    <!-- Contact Information Section -->
    <section class="py-12 lg:py-16">
      <div class="max-w-7xl mx-auto px-4 xl:px-0">
        <div class="grid lg:grid-cols-2 gap-12 lg:gap-20">
          <!-- Contact Details -->
          <div>
            <h2 class="text-2xl lg:text-3xl font-semibold text-slate-900 mb-8">
              Contact Information
            </h2>

            <div class="space-y-6">
              <!-- Email -->
              <div class="flex items-start gap-4">
                <div class="w-12 h-12 rounded-full bg-slate-900 flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-slate-900 mb-2">Email</h3>
                  <a href="mailto:info@yahaotranslate.com" class="text-slate-600 hover:text-slate-900 transition-colors">
                    info@yahaotranslate.com
                  </a>
                </div>
              </div>

              <!-- Address -->
              <div class="flex items-start gap-4">
                <div class="w-12 h-12 rounded-full bg-slate-900 flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-slate-900 mb-2">Office Address</h3>
                  <address class="text-slate-600 not-italic">
                    128, City Road<br>
                    London<br>
                    EC1V 2NX<br>
                    UNITED KINGDOM
                  </address>
                </div>
              </div>

              <!-- Support Hours -->
              <div class="flex items-start gap-4">
                <div class="w-12 h-12 rounded-full bg-slate-900 flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-slate-900 mb-2">Support Hours</h3>
                  <p class="text-slate-600">
                    Monday - Friday: 9:00 AM - 6:00 PM GMT<br>
                    Response time: Within 24 hours
                  </p>
                </div>
              </div>
            </div>

            <!-- Social Links (Optional) -->
            <div class="mt-12">
              <h3 class="text-lg font-semibold text-slate-900 mb-4">Follow Us</h3>
              <div class="flex gap-4">
                <a
                  href="#"
                  class="w-10 h-10 rounded-full bg-slate-100 hover:bg-slate-900 text-slate-600 hover:text-white transition-colors flex items-center justify-center"
                  aria-label="Twitter"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84" />
                  </svg>
                </a>
                <a
                  href="#"
                  class="w-10 h-10 rounded-full bg-slate-100 hover:bg-slate-900 text-slate-600 hover:text-white transition-colors flex items-center justify-center"
                  aria-label="LinkedIn"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
                  </svg>
                </a>
              </div>
            </div>
          </div>

          <!-- Contact Form -->
          <div class="bg-slate-50 rounded-2xl p-8 lg:p-12">
            <h2 class="text-2xl lg:text-3xl font-semibold text-slate-900 mb-6">
              Send Us a Message
            </h2>
            <form class="space-y-6">
              <div>
                <label for="name" class="block text-sm font-medium text-slate-700 mb-2">
                  Your Name
                </label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  class="w-full px-4 py-3 rounded-lg border border-slate-300 focus:border-slate-900 focus:ring-2 focus:ring-slate-900 focus:ring-opacity-20 outline-none transition-colors"
                  placeholder="John Doe"
                  required
                />
              </div>

              <div>
                <label for="email" class="block text-sm font-medium text-slate-700 mb-2">
                  Email Address
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  class="w-full px-4 py-3 rounded-lg border border-slate-300 focus:border-slate-900 focus:ring-2 focus:ring-slate-900 focus:ring-opacity-20 outline-none transition-colors"
                  placeholder="john@example.com"
                  required
                />
              </div>

              <div>
                <label for="subject" class="block text-sm font-medium text-slate-700 mb-2">
                  Subject
                </label>
                <input
                  type="text"
                  id="subject"
                  name="subject"
                  class="w-full px-4 py-3 rounded-lg border border-slate-300 focus:border-slate-900 focus:ring-2 focus:ring-slate-900 focus:ring-opacity-20 outline-none transition-colors"
                  placeholder="How can we help?"
                  required
                />
              </div>

              <div>
                <label for="message" class="block text-sm font-medium text-slate-700 mb-2">
                  Message
                </label>
                <textarea
                  id="message"
                  name="message"
                  rows="5"
                  class="w-full px-4 py-3 rounded-lg border border-slate-300 focus:border-slate-900 focus:ring-2 focus:ring-slate-900 focus:ring-opacity-20 outline-none transition-colors resize-none"
                  placeholder="Tell us more about your inquiry..."
                  required
                ></textarea>
              </div>

              <button
                type="submit"
                class="w-full items-center justify-center whitespace-nowrap text-sm font-medium transition-all focus:shadow-[0_0px_0px_2px_rgba(15,23,42,0.25),0_2px_10px_0px_rgba(0,0,0,0.05)] shadow-[0_2px_10px_0px_rgba(0,0,0,0.05)] bg-slate-900 text-white hover:bg-slate-800 disabled:bg-slate-900/30 disabled:text-slate-50/70 px-6 py-3 rounded-xl flex"
              >
                Send Message
                <svg
                  class="shrink-0 ml-2 h-4"
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 24 24"
                  fill="currentColor"
                >
                  <path d="M3.478 2.405a.75.75 0 00-.926.94l2.432 7.905H13.5a.75.75 0 010 1.5H4.984l-2.432 7.905a.75.75 0 00.926.94 60.519 60.519 0 0018.445-8.986.75.75 0 000-1.218A60.517 60.517 0 003.478 2.405z" />
                </svg>
              </button>
            </form>
          </div>
        </div>
      </div>
    </section>

    <!-- FAQ or Help Section -->
    <section class="bg-slate-50 py-12 lg:py-16">
      <div class="max-w-4xl mx-auto px-4 xl:px-0 text-center">
        <h2 class="text-2xl lg:text-3xl font-semibold text-slate-900 mb-4">
          Need Quick Help?
        </h2>
        <p class="text-lg text-slate-600 mb-8">
          Check out our documentation or start your free trial today
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="#"
            class="inline-flex items-center justify-center whitespace-nowrap text-sm font-medium transition-all shadow-[0_2px_10px_0px_rgba(0,0,0,0.05)] border border-neutral-100 bg-white text-neutral-700 hover:border-neutral-200 hover:bg-neutral-100 px-6 py-3 rounded-xl"
          >
            View Documentation
          </a>
          <a
            href="#"
            class="inline-flex items-center justify-center whitespace-nowrap text-sm font-medium transition-all shadow-[0_2px_10px_0px_rgba(0,0,0,0.05)] bg-slate-900 text-white hover:bg-slate-800 px-6 py-3 rounded-xl"
          >
            {t('hero.try_free')} - {t('hero.try_days')}
          </a>
        </div>
      </div>
    </section>
  </div>
  <Footer />
</BaseLayout>
