---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import BlogHeader from '../../components/BlogHeader.astro';
import BlogCard from '../../components/BlogCard.astro';

// Get all blog posts and sort by date
const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort((a, b) =>
  b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

// Separate featured posts
const featuredPosts = sortedPosts.filter(post => post.data.featured);
const regularPosts = sortedPosts.filter(post => !post.data.featured);

// Get all unique tags
const allTags = [...new Set(allPosts.flatMap(post => post.data.tags))];
---

<BaseLayout
  title="Blog - Insights & Tutorials"
  description="Explore our latest articles about web development, design, and modern technologies."
>
  <BlogHeader />

  <section class="pb-16 md:pb-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      {/* Featured Posts */}
      {featuredPosts.length > 0 && (
        <div class="mb-12">
          <div class="flex items-center gap-x-2 mb-6">
            <h2 class="text-2xl font-bold text-slate-900">Featured Articles</h2>
            <span class="h-px flex-1 bg-neutral-200"></span>
          </div>
          <div class="grid gap-6 md:grid-cols-2">
            {featuredPosts.map(post => (
              <BlogCard
                title={post.data.title}
                description={post.data.description}
                pubDate={post.data.pubDate}
                author={post.data.author}
                slug={post.slug}
                image={post.data.image}
                tags={post.data.tags}
                featured={true}
              />
            ))}
          </div>
        </div>
      )}

      {/* Filter Tags (Optional Enhancement) */}
      {allTags.length > 0 && (
        <div class="mb-8">
          <div class="backdrop-blur-md bg-white/95 border border-white/30 rounded-2xl p-4 shadow-[0_2px_10px_0px_rgba(0,0,0,0.15)]">
            <div class="flex flex-wrap items-center gap-3">
              <span class="text-sm font-semibold text-neutral-700">Filter by topic:</span>
              <button
                class="px-3 py-1.5 rounded-full text-sm font-medium bg-slate-900 text-white hover:bg-slate-800 transition-colors"
                data-filter="all"
              >
                All
              </button>
              {allTags.slice(0, 6).map(tag => (
                <button
                  class="px-3 py-1.5 rounded-full text-sm font-medium bg-white text-neutral-700 hover:bg-neutral-100 border border-neutral-200 transition-colors"
                  data-filter={tag}
                >
                  {tag}
                </button>
              ))}
            </div>
          </div>
        </div>
      )}

      {/* All Posts */}
      <div class="mb-8">
        <div class="flex items-center gap-x-2 mb-6">
          <h2 class="text-2xl font-bold text-slate-900">Latest Articles</h2>
          <span class="h-px flex-1 bg-neutral-200"></span>
        </div>

        {regularPosts.length > 0 ? (
          <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
            {regularPosts.map(post => (
              <BlogCard
                title={post.data.title}
                description={post.data.description}
                pubDate={post.data.pubDate}
                author={post.data.author}
                slug={post.slug}
                image={post.data.image}
                tags={post.data.tags}
                featured={false}
              />
            ))}
          </div>
        ) : (
          <div class="text-center py-12">
            <div class="backdrop-blur-md bg-white/95 border border-white/30 rounded-2xl p-8 shadow-[0_2px_10px_0px_rgba(0,0,0,0.15)]">
              <svg class="mx-auto h-12 w-12 text-neutral-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
              </svg>
              <h3 class="text-lg font-semibold text-slate-900 mb-2">No articles yet</h3>
              <p class="text-neutral-600">Check back soon for new content!</p>
            </div>
          </div>
        )}
      </div>

      {/* Newsletter CTA */}
      <div class="mt-12">
        <div class="backdrop-blur-md bg-gradient-to-br from-blue-50 to-purple-50 border border-white/30 rounded-2xl p-8 md:p-10 shadow-[0_2px_10px_0px_rgba(0,0,0,0.15)]">
          <div class="max-w-2xl mx-auto text-center">
            <h2 class="text-2xl md:text-3xl font-bold text-slate-900 mb-3">
              Stay Updated
            </h2>
            <p class="text-neutral-600 mb-6">
              Subscribe to our newsletter to receive the latest articles and insights directly in your inbox.
            </p>
            <form class="flex flex-col sm:flex-row gap-3 max-w-md mx-auto">
              <input
                type="email"
                placeholder="Enter your email"
                class="flex-1 px-4 py-2.5 rounded-[0.625rem] border border-neutral-200 bg-white text-neutral-700 placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                required
              />
              <button
                type="submit"
                class="px-6 py-2.5 rounded-[0.625rem] bg-slate-900 text-white font-medium hover:bg-slate-800 transition-colors shadow-[0_2px_10px_0px_rgba(0,0,0,0.05)] focus:outline-none focus:ring-2 focus:ring-slate-500 focus:ring-offset-2"
              >
                Subscribe
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<script>
  // Simple client-side filtering (optional enhancement)
  document.addEventListener('DOMContentLoaded', () => {
    const filterButtons = document.querySelectorAll('[data-filter]');
    const blogCards = document.querySelectorAll('article');

    filterButtons.forEach(button => {
      button.addEventListener('click', () => {
        const filter = button.getAttribute('data-filter');

        // Update active state
        filterButtons.forEach(btn => {
          btn.classList.remove('bg-slate-900', 'text-white');
          btn.classList.add('bg-white', 'text-neutral-700', 'border', 'border-neutral-200');
        });
        button.classList.remove('bg-white', 'text-neutral-700', 'border', 'border-neutral-200');
        button.classList.add('bg-slate-900', 'text-white');

        // Filter cards
        blogCards.forEach(card => {
          const cardTags = Array.from(card.querySelectorAll('span')).map(span => span.textContent?.trim());

          if (filter === 'all' || cardTags.some(tag => tag === filter)) {
            card.style.display = '';
          } else {
            card.style.display = 'none';
          }
        });
      });
    });
  });
</script>
