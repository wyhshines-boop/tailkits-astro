---
import BaseLayout from '../layouts/BaseLayout.astro';
import Footer from '../components/Footer.astro';
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<BaseLayout>
  <div class="bg-white min-h-screen">
    <!-- Hero Section -->
    <section class="bg-gradient-to-b from-slate-50 to-white pt-24 lg:pt-32 pb-12 lg:pb-16">
      <div class="max-w-7xl mx-auto px-4 xl:px-0">
        <div class="max-w-3xl mx-auto text-center">
          <div
            class="items-center justify-center rounded-full text-sm font-medium whitespace-nowrap shadow-[0_2px_10px_0px_rgba(0,0,0,0.15)] inline-flex bg-slate-900 text-white px-2.5 py-1"
          >
            About Us
          </div>
          <h1
            class="mt-6 bg-gradient-to-b from-slate-800 to-slate-600 bg-clip-text text-4xl font-semibold text-transparent lg:text-5xl lg:leading-tight"
          >
            Making Shopify Translation Fast & Easy
          </h1>
          <p class="mt-6 text-lg text-slate-600 leading-relaxed">
            We're on a mission to help Shopify merchants expand globally without the translation bottleneck. Our Chrome extension brings AI-powered translation directly into Shopify's Translate & Adapt, saving hours of manual work.
          </p>
        </div>
      </div>
    </section>

    <!-- Story Section -->
    <section class="py-12 lg:py-16">
      <div class="max-w-7xl mx-auto px-4 xl:px-0">
        <div class="grid lg:grid-cols-2 gap-12 lg:gap-20 items-center">
          <div>
            <h2 class="text-3xl lg:text-4xl font-semibold text-slate-900 mb-6">
              Our Story
            </h2>
            <div class="space-y-4 text-slate-600 leading-relaxed">
              <p>
                We built yahao translate after experiencing the pain of managing multiple Shopify stores across different languages. Copying text, switching between translation tools, and pasting everything back was eating up hours every single day.
              </p>
              <p>
                We knew there had to be a better way. That's why we created a Chrome extension that integrates seamlessly with Shopify's native Translate & Adapt interface, adding instant AI translation with a single click.
              </p>
              <p>
                Today, we help Shopify merchants translate 5x faster, supporting 60+ languages with translation quality that matches professional translators.
              </p>
            </div>
          </div>
          <div class="relative">
            <div class="p-1 rounded-2xl bg-gradient-to-br from-blue-500 via-purple-500 to-blue-600">
              <div class="bg-white rounded-xl p-8 lg:p-12">
                <div class="space-y-8">
                  <div class="flex items-start gap-4">
                    <div class="w-12 h-12 rounded-full bg-slate-900 flex items-center justify-center flex-shrink-0">
                      <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                      </svg>
                    </div>
                    <div>
                      <h3 class="text-xl font-semibold text-slate-900 mb-2">5x Faster Translation</h3>
                      <p class="text-slate-600">One click replaces five manual steps</p>
                    </div>
                  </div>
                  <div class="flex items-start gap-4">
                    <div class="w-12 h-12 rounded-full bg-slate-900 flex items-center justify-center flex-shrink-0">
                      <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 21v-4m0 0V5a2 2 0 012-2h6.5l1 1H21l-3 6 3 6h-8.5l-1-1H5a2 2 0 00-2 2zm9-13.5V9" />
                      </svg>
                    </div>
                    <div>
                      <h3 class="text-xl font-semibold text-slate-900 mb-2">60+ Languages</h3>
                      <p class="text-slate-600">Go global with comprehensive language support</p>
                    </div>
                  </div>
                  <div class="flex items-start gap-4">
                    <div class="w-12 h-12 rounded-full bg-slate-900 flex items-center justify-center flex-shrink-0">
                      <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                      </svg>
                    </div>
                    <div>
                      <h3 class="text-xl font-semibold text-slate-900 mb-2">No Conflicts</h3>
                      <p class="text-slate-600">Works natively with Shopify's interface</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Values Section -->
    <section class="bg-slate-50 py-12 lg:py-16">
      <div class="max-w-7xl mx-auto px-4 xl:px-0">
        <div class="text-center mb-12">
          <h2 class="text-3xl lg:text-4xl font-semibold text-slate-900 mb-4">
            Our Values
          </h2>
          <p class="text-lg text-slate-600 max-w-2xl mx-auto">
            The principles that guide everything we build
          </p>
        </div>
        <div class="grid md:grid-cols-3 gap-8">
          <div class="bg-white rounded-2xl p-8 shadow-sm">
            <div class="w-12 h-12 rounded-full bg-slate-900 flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-slate-900 mb-3">Speed First</h3>
            <p class="text-slate-600">
              We believe merchants should spend time growing their business, not copying and pasting translations.
            </p>
          </div>
          <div class="bg-white rounded-2xl p-8 shadow-sm">
            <div class="w-12 h-12 rounded-full bg-slate-900 flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-slate-900 mb-3">Quality Matters</h3>
            <p class="text-slate-600">
              AI-powered translations optimized for e-commerce, matching professional translator quality.
            </p>
          </div>
          <div class="bg-white rounded-2xl p-8 shadow-sm">
            <div class="w-12 h-12 rounded-full bg-slate-900 flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5" />
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-slate-900 mb-3">Simple Integration</h3>
            <p class="text-slate-600">
              No clunky apps or conflicts. Works seamlessly with Shopify's native tools.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-16 lg:py-24">
      <div class="max-w-4xl mx-auto px-4 xl:px-0 text-center">
        <h2 class="text-3xl lg:text-4xl font-semibold text-slate-900 mb-6">
          Ready to translate 5x faster?
        </h2>
        <p class="text-lg text-slate-600 mb-8">
          Join merchants who are expanding globally with yahao translate
        </p>
        <a
          href="#"
          class="inline-flex items-center justify-center whitespace-nowrap text-sm font-medium transition-all focus:shadow-[0_0px_0px_2px_rgba(15,23,42,0.25),0_2px_10px_0px_rgba(0,0,0,0.05)] shadow-[0_2px_10px_0px_rgba(0,0,0,0.05)] bg-slate-900 text-white hover:bg-slate-800 disabled:bg-slate-900/30 disabled:text-slate-50/70 px-6 py-3 rounded-xl"
        >
          {t('hero.try_free')}
          <span class="ml-1 text-slate-400"> - {t('hero.try_days')}</span>
          <svg
            class="shrink-0 ml-2 h-4"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="currentColor"
            aria-hidden="true"
          >
            <path
              fill-rule="evenodd"
              d="M12.97 3.97a.75.75 0 0 1 1.06 0l7.5 7.5a.75.75 0 0 1 0 1.06l-7.5 7.5a.75.75 0 1 1-1.06-1.06l6.22-6.22H3a.75.75 0 0 1 0-1.5h16.19l-6.22-6.22a.75.75 0 0 1 0-1.06Z"
              clip-rule="evenodd"
            />
          </svg>
        </a>
      </div>
    </section>
  </div>
  <Footer />
</BaseLayout>
